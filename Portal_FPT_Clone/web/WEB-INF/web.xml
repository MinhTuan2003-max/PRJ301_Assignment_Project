<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>controller.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentTranscriptController</servlet-name>
        <servlet-class>controller.student.StudentTranscriptController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeController</servlet-name>
        <servlet-class>controller.home.HomeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentDetailController</servlet-name>
        <servlet-class>controller.detail.StudentDetailController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MarkReportController</servlet-name>
        <servlet-class>controller.student.MarkReportController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>WeeklyTimeTableController</servlet-name>
        <servlet-class>controller.student.WeeklyTimeTableController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ActivityDetailController</servlet-name>
        <servlet-class>controller.detail.ActivityDetailController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InstructorDetailController</servlet-name>
        <servlet-class>controller.detail.InstructorDetailController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewAttendstudentController</servlet-name>
        <servlet-class>controller.student.ViewAttendstudentController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GroupDBContext</servlet-name>
        <servlet-class>controller.student.GroupController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentTranscriptController</servlet-name>
        <url-pattern>/transcriptstudent</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeController</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentDetailController</servlet-name>
        <url-pattern>/userdetail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MarkReportController</servlet-name>
        <url-pattern>/mark</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>WeeklyTimeTableController</servlet-name>
        <url-pattern>/timetable</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ActivityDetailController</servlet-name>
        <url-pattern>/activitydetail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InstructorDetailController</servlet-name>
        <url-pattern>/user_detail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewAttendstudentController</servlet-name>
        <url-pattern>/viewattendance</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GroupDBContext</servlet-name>
        <url-pattern>/group</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
